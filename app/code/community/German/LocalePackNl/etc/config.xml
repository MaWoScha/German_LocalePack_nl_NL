<config>
    <modules>
        <German_LocalePackNl>
            <version>0.1.0</version>
            <locale>nl_NL</locale>
            <title>Dutch (Netherlands) Language Pack</title>
            <link_git>https://github.com/mawoscha/German_LocalePack_nl_NL</link_git>
        </German_LocalePackNl>
    </modules>

    <global>
        <models>
            <localepacknl>
                <class>German_LocalePackNl_Model</class>
            </localepacknl>
        </models>
        <helpers>
            <localepacknl>
                <class>German_LocalePackNl_Helper</class>
            </localepacknl>
        </helpers>
        <blocks>
            <localepacknl>
                <class>German_LocalePackNl_Block</class>
            </localepacknl>
        </blocks>
        <events>
            <adminhtml_controller_action_predispatch_start>
                <observers>
                    <localepacknl>
                        <class>localepacknl/observer</class>
                        <method>adminhtmlControllerActionPredispatchStart</method>
                    </localepacknl>
                </observers>
            </adminhtml_controller_action_predispatch_start>
        </events>
    </global>

    <default>
        <localepacknl>
             <notification>
                <url>https://github.com/mawoscha/German_LocalePack_nl_NL</url>
            </notification>
        </localepacknl>
        <magesetup>
            <default_country>NL</default_country>
        </magesetup>
    </default>

    <adminhtml>
        <translate>
            <modules>
                <German_LocalePackNl>
                    <files>
                        <default>German_LocaleNl.csv</default>
                    </files>
                </German_LocalePackNl>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children> <!--
                                        <localepacks translate="title" module="localepacknl">
                                            <title>Language Packs</title>
                                            <children> -->
                                                <localepacknl translate="title" module="localepacknl">
                                                    <title>Dutch (Netherlands) Language Pack</title>
                                                </localepacknl> <!--
                                            </children>
                                        </localepacks> -->
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>